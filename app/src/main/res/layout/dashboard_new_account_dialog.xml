<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="@+id/newAccountValue"
        app:layout_constraintTop_toBottomOf="@+id/newAccountValue" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/drawableSpinner"
        app:layout_constraintTop_toBottomOf="@+id/newAccountValue" />

    <EditText
        android:id="@+id/newAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Account name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawableSpinner"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newAccountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Account balance"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/newAccountName"
        app:layout_constraintStart_toStartOf="@+id/newAccountName"
        app:layout_constraintTop_toBottomOf="@+id/newAccountName" />

    <Spinner
        android:id="@+id/drawableSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icon"
        app:layout_constraintEnd_toEndOf="@+id/drawableSpinner"
        app:layout_constraintStart_toStartOf="@+id/drawableSpinner"
        app:layout_constraintTop_toTopOf="@+id/newAccountName" />
</androidx.constraintlayout.widget.ConstraintLayout>